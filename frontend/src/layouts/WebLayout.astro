---
import CommonBase from './CommonBase.astro';

const { title } = Astro.props;
---

<CommonBase title={title}>
	<div id="container">
		<slot />
	</div>
</CommonBase>

<style>
:root {
	background-color: #333333;
	font-size: 16px;
}

:global(body) {
	overflow-x: hidden;
}

@media screen and (min-width: 960px) {
	:root {
		font-size: 24px;
	}
}

#container {
	width: 40rem;
	max-width: 100%;
	margin: auto;
}
</style>
