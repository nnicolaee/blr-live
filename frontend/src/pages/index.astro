---
import WebLayout from '../layouts/WebLayout.astro';

import StageView from '../components/StageView.tsx';
---

<WebLayout title='BattleLab Robotica'>
	<StageView client:only="preact" />
</WebLayout>

<style>

#dock {
	position: fixed;
	bottom: 0;
	width: 100%;
	max-width: 30rem;
	height: 3rem;
	background-color: #1a1a1a;
	border-radius: 0.5rem 0.5rem 0 0;
	padding: 0.75rem;
	box-sizing: border-box;
	left: 50%;
	transform: translateX(-50%);
}

:root {
	padding-bottom: 4rem; /* empty space so you can scroll and see what would be otherwise covered by the navbar */
}


</style>
